<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Family Budget</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container">
    <h1>Family Budget System</h1>
    <nav>
      <a href="/families">Families</a> |
      <a href="/members">Members</a> |
      <a href="/categories">Categories</a> |
      <a href="/transactions">Transactions</a>
    </nav>

    <h3>Recent Families</h3>
    <ul>
      <% families.forEach(f => { %>
        <li><a href="/reports/summary/<%= f.family_id %>"><%= f.family_name %></a></li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
